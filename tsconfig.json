{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~*": ["./src/app/*"]
    },
    "target": "ES5",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "sourceMap": false,
    "strictNullChecks": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "removeComments": true
  },
  "include": ["types/**/*", "src/**/*"]
}
